{
  "title": "MariaDB Database",
  "type": "object",
  "required": [
    "connectorName",
    "host",
    "port",
    "database",
    "user",
    "password"
  ],
  "properties": {
    "connectorName": {
      "type": "string",
      "title": "Name of the connector",
      "default": "Unstract's MariaDB connector"
    },
    "host": {
      "type": "string",
      "title": "Host",
      "default": "localhost"
    },
    "port": {
      "type": "string",
      "title": "Port",
      "default": "3306"
    },
    "database": {
      "type": "string",
      "title": "Database",
      "default": ""
    },
    "user": {
      "type": "string",
      "title": "User",
      "default": "root"
    },
    "password": {
      "type": "string",
      "title": "Password",
      "format": "password",
      "default": ""
    },
    "sslEnabled": {
      "type": "boolean",
      "title": "Enable SSL",
      "description": "Enable SSL connection to the database. Required for most cloud services like SkySQL. Disable only for local development or when specifically not supported by your server.",
      "default": true
    }
  }
}
