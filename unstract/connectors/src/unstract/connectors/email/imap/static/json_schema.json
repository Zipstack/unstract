{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "host": {
            "type": "string",
            "title": "IMAP Server",
            "description": "IMAP server hostname"
        },
        "port": {
            "type": "integer",
            "title": "Port",
            "description": "IMAP server port (default: 993 for IMAPS)",
            "default": 993
        },
        "username": {
            "type": "string",
            "title": "Username",
            "description": "Email account username"
        },
        "password": {
            "type": "string",
            "title": "Password",
            "description": "Email account password"
        },
        "use_ssl": {
            "type": "boolean",
            "title": "Use SSL",
            "description": "Whether to use SSL for connection",
            "default": true
        }
    },
    "required": ["host", "username", "password"]
}
