{
  "title": "${PROVIDER_NAME} LLM",
  "type": "object",
  "required": [
    "adapter_name",
    "api_key"
  ],
  "properties": {
    "adapter_name": {
      "type": "string",
      "title": "Name",
      "default": "",
      "description": "Provide a unique name for this adapter instance. Example: ${PROVIDER_ID}-llm-1"
    },
    "api_key": {
      "type": "string",
      "title": "API Key",
      "format": "password",
      "description": "Your ${PROVIDER_NAME} API key."
    },
    "model": {
      "type": "string",
      "title": "Model",
      "default": "",
      "description": "The model to use for API requests."
    },
    "api_base": {
      "type": "string",
      "format": "url",
      "title": "API Base",
      "default": "",
      "description": "API endpoint URL (optional, uses default if not specified)."
    },
    "max_tokens": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 1,
      "title": "Maximum Output Tokens",
      "description": "Maximum number of output tokens to limit LLM replies."
    },
    "max_retries": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 1,
      "title": "Max Retries",
      "default": 5,
      "description": "Maximum retry attempts for failed requests."
    },
    "timeout": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 1,
      "title": "Timeout",
      "default": 900,
      "description": "Request timeout in seconds."
    }
  }
}
